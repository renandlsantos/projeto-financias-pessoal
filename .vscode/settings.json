{
  // Deixa o Agente ligado e com f√¥lego
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 100,

  // Agente conserta sozinho e pode rodar tasks do workspace
  "github.copilot.chat.agent.autoFix": true,
  "github.copilot.chat.agent.runTasks": true,

  // üö® Bypass geral de confirma√ß√µes de ferramentas (N√çVEL M√ÅXIMO)
  "chat.tools.autoApprove": true,

  // Se quiser granularidade (mas aqui j√° est√° tudo liberado acima):
  // marque como true para n√£o pedir confirma√ß√£o nem para comandos perigosos
  "chat.tools.terminal.autoApprove": {
    "rm": true,
    "rmdir": true,
    "del": true,
    "kill": true,
    "curl": true,
    "wget": true,
    "eval": true,
    "chmod": true,
    "chown": true,
    "/^Remove-Item\\b/i": true,
    "/^Stop-Process\\b/i": true,
    // Permite: git, docker, docker compose
    "/^git\\b/i": true,
    "/^docker\\b/i": true,
    "/^docker-compose\\b/i": true,
    "/^docker\\s+compose\\b/i": true,
  },

  // N√£o me notifique pedindo confirma√ß√£o
  "chat.notifyWindowOnConfirmation": false,

  // Edi√ß√£o via chat: sem popups e com auto-aceite r√°pido
  "chat.editing.confirmEditRequestRemoval": false,
  "chat.editing.confirmEditRequestRetry": false,
  "chat.editing.autoAcceptDelay": 600, // ms; ajuste p/ 0.3‚Äì1.0s conforme gosto

  // O resto que ajuda o agente a agir ‚Äúsozinho‚Äù
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.newWorkspaceCreation.enabled": true,

  // Suas atuais (mantidas)
  "chat.commandCenter.enabled": true,
  "github.copilot.enable": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.suggestionCount": 1
}
